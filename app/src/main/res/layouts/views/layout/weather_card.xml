<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="80dp"
    android:layout_height="150dp"
    card_view:contentPadding="7dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/opacityGray"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/humidity"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/small_margin" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/widget_icon_size"
            android:layout_height="@dimen/widget_icon_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/widget_icon_size"
            android:maxWidth="@dimen/widget_icon_size"
            android:scaleType="fitCenter"
            android:tint="@color/white"/>

        <TextView
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

</android.support.v7.widget.CardView>